{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train robustness",
            "type": "python",
            "request": "launch",
            "program": "src/train/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/train/robustness.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Eval robustness",
            "type": "python",
            "request": "launch",
            "program": "src/eval/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/eval/robustness.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Eval classification",
            "type": "python",
            "request": "launch",
            "program": "src/dinov2/dinov2/run/eval/linear.py",
            "console": "integratedTerminal",
            "args": [
                "--config-file", "src/dinov2/dinov2/configs/eval/vitb14_reg4_pretrain.yaml",
                "--pretrained-weights", "src/dinov2/weights/dinov2_vitb14_reg4_pretrain.pth",
                "--output-dir", "results/eval/dinov2_vitb14_reg4/linear",
                "--train-dataset", "ImageNet:split=TRAIN:root=/srv/beegfs/scratch/users/p/pulfer/datasets/imagenet:extra=/srv/beegfs/scratch/users/p/pulfer/datasets/extra",
                "--val-dataset", "ImageNet:split=VAL:root=/srv/beegfs/scratch/users/p/pulfer/datasets/imagenet:extra=/srv/beegfs/scratch/users/p/pulfer/datasets/extra",

                // Own cluster settings (to use with submitit)
                "--partition", "private-cui-gpu",
                "--nodes", "1",
                "--gpus", "1",
                "--batch-size", "128",
            ],
            "env": {
                "PYTHONPATH": "src/dinov2",
            },
            "justMyCode": true
        },
    ]
}
