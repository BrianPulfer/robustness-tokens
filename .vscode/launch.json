{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train robustness",
            "type": "python",
            "request": "launch",
            "program": "src/train/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/train/robustness.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Eval robustness",
            "type": "python",
            "request": "launch",
            "program": "src/eval/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/eval/robustness/default.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Convert",
            "type": "python",
            "request": "launch",
            "program": "src/convert.py",
            "console": "integratedTerminal",
            "args": [
                "--checkpoint", "results/dinov2_vitb14/last.ckpt",
                "--output", "results/dinov2_vitb14/last.pth"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Eval classification",
            "type": "python",
            "request": "launch",
            "program": "src/dinov2/dinov2/run/eval/linear.py",
            "console": "integratedTerminal",
            "args": [
                "--config-file", "configs/eval/classification/vitb14_reg.yaml",
                "--pretrained-weights", "results/dinov2_vitb14_reg/last.pth",
                "--output-dir", "results/dinov2_vitb14_reg/linear",
                "--train-dataset", "ImageNet:split=TRAIN:root=/srv/beegfs/scratch/users/p/pulfer/datasets/IMAGENET/imagenet:extra=/srv/beegfs/scratch/users/p/pulfer/datasets/IMAGENET/extra",
                "--val-dataset", "ImageNet:split=VAL:root=/srv/beegfs/scratch/users/p/pulfer/datasets/IMAGENET/imagenet:extra=/srv/beegfs/scratch/users/p/pulfer/datasets/IMAGENET/extra",

                // Own cluster settings (to use with submitit)
                "--partition", "private-cui-gpu",
                "--nodes", "1",
                "--gpus", "1",
                "--batch-size", "128",
                "--timeout", "604800"
            ],
            "env": {
                "PYTHONPATH": "src/dinov2",
            },
            "justMyCode": true
        },
        {
            "name": "Eval segmentation",
            "type": "python",
            "request": "launch",
            "program": "src/mmsegmentation/tools/train.py",
            "console": "integratedTerminal",
            "args": [
                "configs/eval/segmentation/dinov2_vits14_ade20k_linear_config.py"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
    ]
}
