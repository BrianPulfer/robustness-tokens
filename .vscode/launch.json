    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train robustness",
            "type": "python",
            "request": "launch",
            "program": "src/train/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/train/robustness.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Eval robustness",
            "type": "python",
            "request": "launch",
            "program": "src/eval/robustness.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/eval/robustness.yaml"
            ],
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
    ]
}
